package cmc.edu.vn.chapter4;


import java.util.ArrayList;

public class Bai4 {
    public static void main(String[] args) {
        ArrayList<String> fruits = new ArrayList<>();
        fruits.add("Apple");
        fruits.add("Banana");
        fruits.add("Orange");

        fruits.add(1, "Mango");
        int index = fruits.indexOf("Banana");

        if (index != -1) {
            fruits.set(index, "Grapes");
        }

        if (fruits.contains("Apple")) {
            System.out.println("Apple ton tai.");
        } else {
            System.out.println("Apple khong ton tai.");
        }

        System.out.println("List fruits: " + fruits);
    }
}


